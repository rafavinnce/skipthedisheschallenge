<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

  <changeSet id="01" author="rafaelmilanibarbosa">
    <createTable tableName="customer" remarks="A table to contain all customers">
      <column name="id" type="int">
        <constraints nullable="false" unique="true" primaryKey="true"/>
      </column>
      <column name="email" type="varchar(50)">
        <constraints nullable="false" unique="true"/>
      </column>
      <column name="name" type="varchar(30)">
        <constraints nullable="false" unique="true"/>
      </column>
      <column name="address" type="varchar(150)">
        <constraints nullable="false" unique="true"/>
      </column>
      <column name="creation" type="varchar(20)">
        <constraints nullable="false" unique="true"/>
      </column>
      <column name="password" type="varchar(30)">
        <constraints nullable="false" unique="true"/>
      </column>
      <column name="reg_date" type="timestamp">
        <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>
</databaseChangeLog>